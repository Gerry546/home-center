# short-description: Create Reterminal partition scheme

part /boot --source bootimg-partition --fixed-size 100M                                     --ondisk mmcblk0 --fstype=vfat --label boot   --align 4096
#part /boot --source rawcopy           --sourceparams="file=boot-image.vfat"            --ondisk mmcblk0 --fstype=vfat --label boot_B   --align 4096  --size 64

part /     --source rootfs            --fixed-size 5G                                       --ondisk mmcblk0 --fstype=ext4 --label rootfs_A          --align 4096
part /     --source rootfs            --fixed-size 5G                                       --ondisk mmcblk0 --fstype=ext4 --label rootfs_B          --align 4096

part /data --ondisk mmcblk0 --fstype=ext4 --label data --align 4096 --size 100M

bootloader --ptable gpt